<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="#E5E5E5">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Circle_Image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img"
        android:layout_marginLeft="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/Notification_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="@string/mark_essien_accepted_your_friend_request"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintLeft_toRightOf="@id/Circle_Image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/Circle_Image"
        android:layout_marginStart="10sp" />

    <TextView
        android:id="@+id/Time_Tv"
        android:layout_width="wrap_content"
        android:text="@string/_9hrs_ago"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/Notification_Title"
        app:layout_constraintLeft_toLeftOf="@id/Notification_Title"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Notification_Tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_"
        android:textColor="#FF5722"
        app:layout_constraintBottom_toBottomOf="@id/Time_Tv"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintLeft_toRightOf="@id/Time_Tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/Time_Tv" />

    <view
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/Time_Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>